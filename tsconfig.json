{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@prisma/client": ["../node_modules/@prisma/client"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}